{
  "name": "pro-json-formatter",
  "version": "1.0.1",
  "description": "Professional JSON Formatter Desktop Client",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac-dmg": "npm run build && electron-builder --mac dmg",
    "package": "electron-builder --mac"
  },
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^4.0.14"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.projson.formatter",
    "productName": "ProJSON",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "ProJSON Installer",
      "backgroundColor": "#ffffff",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
